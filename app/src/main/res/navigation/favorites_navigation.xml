<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorites"
    app:startDestination="@id/favoritesScreen">

    <fragment
        android:id="@+id/favoritesScreen"
        android:name="com.recipeapp.ui.favorites.FavoritesFragment"
        android:label="@string/title_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/toRecipeDetails"
            app:destination="@id/recipeDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.recipeapp.ui.categories.recipedetails.RecipeDetailsFragment"
        android:label="{recipeName}"
        tools:layout="@layout/fragment_recipe_details" >
        <argument
            android:name="recipeName"
            app:argType="string" />
        <argument
            android:name="recipeId"
            app:argType="string" />
    </fragment>

</navigation>